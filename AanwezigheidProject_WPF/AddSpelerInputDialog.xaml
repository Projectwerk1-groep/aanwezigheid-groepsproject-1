<Window x:Class="AanwezigheidProject_WPF.AddSpelerInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AanwezigheidProject_WPF"
        mc:Ignorable="d"
        Title="Speler Toevoegen" Height="300" Width="500">

    <StackPanel Margin="10">
        <TextBlock Text="Voeg een nieuwe speler toe:" Margin="5,5,5,15" FontWeight="SemiBold" FontSize="15" />
        <TextBlock Text="Naam:" Margin="5" FontWeight="SemiBold" />
        <TextBox x:Name="NaamTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Rugnummer:" Margin="5" FontWeight="SemiBold" />
        <TextBox x:Name="RugnummerTextBox" Margin="0,0,0,10"/>
        <StackPanel>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Content="OK" Width="75" Margin="5" Click="OK_Click" HorizontalAlignment="Left" />
                <Button Content="Annuleer" Width="Auto" Margin="5" Click="Cancel_Click" HorizontalAlignment="Right" Grid.Column="1" />
            </Grid>
        </StackPanel>
    </StackPanel>

</Window>
