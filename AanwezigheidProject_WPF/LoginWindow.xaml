<Window x:Class="AanwezigheidProject_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        Title="Inloggen" Height="300" Width="400">
    <Grid>
        <Grid VerticalAlignment="center" HorizontalAlignment="left">
            <TextBlock Text="Inloggen" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="174,20,0,0" />

            <Label Content="Gebruikersnaam:" HorizontalAlignment="left" Margin="50,80,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="150,84,0,0" Width="150" VerticalAlignment="Top"/>

            <TextBox Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="14" Height="50" />

            <Button Content="Inloggen" HorizontalAlignment="Left" Margin="175,182,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click"/>

            <TextBlock x:Name="ErrorTextBlock" Text="" Foreground="Red" HorizontalAlignment="Center" Margin="0,220,0,0"/>
        </Grid>
    </Grid>
</Window>
